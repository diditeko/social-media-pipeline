# ===============================
# Kafka Configuration
# ===============================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=your-kafka-topic

# ===============================
# Crawling Keywords
# ===============================
KEYWORDS=["keyword1", "keyword2", "keyword3"]

# ===============================
# Hadoop Configuration
# ===============================
HDFS_URL=hdfs://localhost:9000
HDFS_URL_UI=http://localhost:9870
HDFS_PATH=/your-hdfs-path/

# ===============================
# PostgreSQL Database Configuration
# ===============================
POSTGRES_JAR=/path/to/postgresql-driver.jar
DB_USER=your_db_user
DB_PASS=your_db_password
DB_HOST=your_db_host
DB_PORT=5432
DB_NAME=your_db_name
DB_TABLE=your_table_name
DB_URL=jdbc:postgresql://your_db_host:5432/your_db_name

# ===============================
# Cleaned Data Path (HDFS/S3/Local)
# ===============================
CLEANED_PATH=/path/to/cleaned/data/

# ===============================
# Machine Learning Model
# ===============================
ML_MODELS=your-model-name-or-path
ML_DB_URL=postgresql+psycopg2://your_user:your_password@your_host:5432/your_db_name

# ===============================
# Airflow Configuration
# ===============================
BASE_DIR=/your/project/base/dir
